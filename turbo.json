{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "db:generate": {},
    "db:migrate": {},
    "db:migrate:deploy": {},
    "db:studio": {},
    "db:seed": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "start": {}
  }
}